@using hotelv2.Models
@model UsuarioCLS
@{
    ViewBag.Title = "Agregar";
}

<h2>Agregar</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Agregar", "Usuario", FormMethod.Post))
        {
            <div>
                @Html.LabelFor(p => p.email)
                @Html.TextAreaFor(p => p.email, new { @class = "form-control" })
                @Html.ValidationMessage("email", new { @class="text-danger"})
            </div>

            <div>
                @Html.LabelFor(p => p.password)
                @Html.TextAreaFor(p => p.password, new { @class = "form-control" })
                @Html.ValidationMessage("password", new { @class = "text-danger" })
            </div>
            <br />
            <div style="margin:auto">
                <input type="submit" class="btn btn-primary" value="Guardar" />    
            </div>

        }
    </div>
</div>