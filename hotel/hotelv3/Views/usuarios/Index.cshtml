@model IEnumerable<hotelv3.Models.usuario>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuarios registrados</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<div class="jumbotron">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idUser }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idUser }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idUser })
                </td>
            </tr>
        }

    </table>
    </div>