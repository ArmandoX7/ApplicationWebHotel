@model IEnumerable<hotelv3.Models.registro>

@{
    ViewBag.Title = "Registros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registros confirmados</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>

<div class="jumbotron">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.huesped.idHuesped)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.habitacion.tipo)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idRegistro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.huesped.idHuesped)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descuento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.habitacion.tipo)
        </td>

        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.idRegistro }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idRegistro }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idRegistro })
        </td>
    </tr>
        }

    </table>

    </div>