@model IEnumerable<hotelv3.Models.consumo>

@{
    ViewBag.Title = "Consumos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consumos</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<div class="jumbotron">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idConsumo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.huesped.idHuesped)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.servicio.idServicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hora)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idConsumo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.huesped.idHuesped)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.servicio.idServicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hora)
        </td>

        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.idConsumo }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idConsumo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idConsumo })
        </td>
    </tr>
        }

    </table>
    </div>